<div class="card__item">
    <div class="item">
        <div>Avatar URL</div>
        <div>
            <input 
                type="url" 
                name="avatar_url" 
                id="avatar_url" 
                placeholder="Digite a URL" 
                value="{{teacher.avatar_url}}"
            >
        </div>
    </div>

    <div class="item">
        <div>Nome completo</div> 
        <div>
            <input 
                type="text" 
                name="name" 
                id="name" 
                placeholder="Digite seu nome completo" 
                value="{{teacher.name}}"
            >
        </div>
    </div>

    <div class="item">
        <div>Data de nascimento</div>
        <div>
            <input 
                type="date" 
                name="birth" 
                id="birth" 
                value="{{teacher.birth}}"
            >
        </div>
    </div>
    
    <div class="item">
        <div>Grau de escolaridade</div>
        <div>
            <select name="education" id="education">
                <option 
                 {% if teacher.education == 'high_school' %}
                    selected
                 {% endif %}
                    value="high_school">Ensino Médio Completo
                </option>
                
                <option 
                {% if teacher.education == 'higher_education' %}
                    selected
                {% endif %}
                    value="higher_education">Ensino Superior Completo
                </option>

                <option 
                {% if teacher.education == 'master' %}
                    selected
                {% endif %}
                    value="master">Mestrado
                </option>
                
                <option 
                 {% if teacher.education == 'doctorate' %}
                    selected
                {% endif %}
                    value="doctorate">Doutorado</option>
            </select>
        </div>
    </div>

    <div class="item">
        <div>Tipo da aula</div>
        <div>
            <input 
                type="radio" 
                name="class_type" 
                id="presential" 
                value="Presencial" 
                checked="checked"
                {% if teacher.class_type == 'Presencial' %}
                    checked
                {% endif %}
            >
            <label for="Presencial">Presencial</label>

            <input 
                type="radio" 
                name="class_type" 
                id="distance" 
                value="A Distância"
                {% if teacher.class_type == 'A Distância' %}
                    checked
                {% endif %}
            >
            <label for="A Distância">A Distância</label>
        </div>
    </div>

    <div class="item">
        <div>Área de atuação</div>
        <div>
            <input 
                type="text" 
                name="occupation" 
                id="occupation" 
                placeholder="Digite as áres separadas por ponto e virgula"
                value="{{teacher.occupation}}"
            >
        </div>
    </div>
    
    <div>
        <button type="submit">Salvar</button>
    </div>
</div>