{% extends 'layout.njk' %}

{% block content %}

    <div class="card">

        <section class="card__image" style="background: url(https://source.unsplash.com/collection/517198/900x900) no-repeat center center /cover"></section>

        <section class="card__details">
            <form method="POST" action="/teachers?_method=PUT">

                <h3>Editar teacher</h3>

                {% include 'teachers/fields.njk' %}

                <input type="hidden" name="id" value="{{teacher.id}}">
            </form>

            <form id="button__delete" method="POST" action="/teachers?_method=DELETE">
                <input type="hidden" name="id" value="{{teacher.id}}">
                <button type="submit">Deletar</button>
            </form>
        </section>
    </div>

{% endblock content %}